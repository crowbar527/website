@model IEnumerable<StaticCamera>
@{
    ViewData["Title"] = "Home Page";
}


<head>
    <script src="https://maps.googleapis.com/maps/api/js?"></script>
    <!--Include Leaflet-->
    <link rel="stylesheet" href="~/lib/Leaflet/leaflet.css" />
    <script src="~/lib/Leaflet/leaflet.js"></script>
</head>
<body onload="DisplayGoogleMap()">
    <div id="myDiv" style="width:100%;height:800px;"></div>
    <div id="ljsmap" style="width:100%;height:800px;">

    </div>

    <script type="text/javascript">
        function DisplayGoogleMap() {

            //Set the Latitude and Longitude of the Map
            var myAddress = new google.maps.LatLng(-41.2177074, 178.1841412);

            //Create Options or set different Characteristics of Google Map
            var mapOptions = {
                center: myAddress,
                zoom: 5.96,
                minZoom: 5.96,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            //Display the Google map in the div control with the defined Options
            var map = new google.maps.Map(document.getElementById("myDiv"), mapOptions);
        }
    </script>
    <!--Setup map-->
    <script>
        var mymap = L.map('ljsmap').setView([-41.2177074, 178.1841412], 5.96);
        L.tileLayer('https://a.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '<a href="https://www.openstreetmap.org/copyright">© OpenStreetMap contributors</a>',
            maxZoom: 18,
            tileSize: 512,
            zoomOffset: -1
        }).addTo(mymap);
    </script>

    @foreach (var item in Model)
    {
        <script>
            var marker = L.marker([@item.StartPos.Latitude, @item.StartPos.Longtitude], {

            });
            marker.bindPopup('@item.Installed');
    marker.addTo(mymap);
        </script>
    }

</body>

